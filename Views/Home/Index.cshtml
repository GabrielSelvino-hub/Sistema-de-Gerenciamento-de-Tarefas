
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Welcome To The MATO </h1>

    <p>Sistema de Gerenciamento de Tarefas</p>

    <form asp-controller="Login" asp-action="Login" method="post">
        <div>
            <label for="UserName">Nome de Usuário: </label>
            <input type="text" name="UserName" id="UserName" required />
        </div>
        <div>
            <label for="passSenha word">Senha: </label>
            <input type="password" name="Senha" id="Senha " required />
        </div>
        <div>
            <button type="submit">Login</button>
        </div>
    </form>

</div>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .text-center {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff;
    }

        .text-center h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .text-center p {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .text-center form {
            display: flex;
            flex-direction: column;
        }

        .text-center label {
            font-size: 14px;
            margin-bottom: 5px;
        }

        .text-center input[type="text"],
        .text-center input[type="password"] {
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .text-center button[type="submit"] {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .text-center button[type="submit"]:hover {
                background-color: #0056b3;
            }

</style>
