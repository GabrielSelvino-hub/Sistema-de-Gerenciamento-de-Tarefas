@page
@model Sistema_de_Gerenciamento_de_Tarefas.Views.Home.loginModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Indica que esta página não usará um layout compartilhado.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/styles.css"> <!-- Certifique-se de ter o arquivo styles.css na pasta Content do seu projeto. -->
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        <form>
            <div class="form-group">
                <label for="username">Usuário</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Logar</button>
        </form>
    </div>
</body>
</html>
